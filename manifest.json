{
	"manifest_version": 2,
	"name": "Heliotropium",
	"version": "0.5.6",
	"description": "Check out the date of the page",
	"icons": {
		"48": "icons/icon-black.png",
		"96": "icons/icon-black.png"
	},
	"background": {
		"scripts": [
			"heliotropium_background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"heliotropium_content.js"
			]
		}
	],
	"browser_action": {
		"default_icon": "icons/icon-gray.png"
	},
	"permissions": [
		"tabs"
	]
}
