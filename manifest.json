{
	"manifest_version": 2,
	"name": "Heliotropium",
	"version": "0.12.2",
	"description": "Check out the date of the page",
	"icons": {
		"48": "icons/icon_gray.png",
		"96": "icons/icon_gray.png"
	},
	"background": {
		"scripts": ["heliotropium_background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["https://*/*", "http://*/*"],
			"exclude_matches": [
				"https://*.google.com/*",
				"https://*.google.co.jp/*",
				"https://www.amazon.com/*",
				"https://www.amazon.co.jp/*",
				"https://www.facebook.com/*",
				"https://twitter.com/*",
				"https://*.wikipedia.org/*"
			],
			"exclude_globs": [
				"*.js",
				"*.css",
				"*.txt",
				"*.json",
				"*.xml",
				"*.png",
				"*.jpg",
				"*.jpeg",
				"*.webp",
				"*.avif",
				"*.jxl",
				"*.mp4",
				"*.webm",
				"*.pdf"
			],
			"js": ["heliotropium_content.js"]
		}
	],
	"browser_action": {
		"default_icon": "icons/icon_gray.png"
	},
	"permissions": ["tabs"]
}
